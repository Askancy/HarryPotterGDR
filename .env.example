# ============================================
# Harry Potter GDR - Configuration
# ============================================

# Application
APP_NAME="Hogwarts GDR"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Database
# Opzioni: mysql, pgsql, sqlite, sqlsrv
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=hogwarts_gdr
DB_USERNAME=root
DB_PASSWORD=

# Per SQLite (alternativa semplice):
# DB_CONNECTION=sqlite
# DB_DATABASE=database/database.sqlite

# Cache & Sessions
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DRIVER=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Redis (optional)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@hogwarts.com"
MAIL_FROM_NAME="${APP_NAME}"

# Per produzione (esempio con Gmail):
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password
# MAIL_ENCRYPTION=tls

# AWS (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher (optional - per broadcasting real-time)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1

# Mix (frontend assets)
MIX_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
MIX_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# ============================================
# Hogwarts GDR - Custom Settings
# ============================================

# School System
SCHOOL_YEAR_START_MONTH=9
SCHOOL_YEAR_START_DAY=1
SCHOOL_YEAR_END_MONTH=6
SCHOOL_YEAR_END_DAY=30

# Economy System
STARTING_GALLEONS=25
WALLET_ENABLED=true

# House System
HOUSE_POINTS_ENABLED=true
AUTO_HOUSE_POINTS=true

# Game Settings
ENABLE_RANDOM_EVENTS=true
ENABLE_JOBS=true
ENABLE_SCHOOL_SYSTEM=true
